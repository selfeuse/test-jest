{
	"compilerOptions": {
		"downlevelIteration": true,
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@shared/*": ["src/shared/*"],
			"@redux/*": ["src/redux/*"],
			"@utils/*": ["src/utils/*"],
			"@api/*": ["src/api/*"],
			"@pages/*": ["src/pages/*"],
			"@/*": ["src/*"],
			"@config/*": ["config/*"]
		},
		"incremental": true
	},
	"include": [ "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
